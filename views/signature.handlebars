<h1>Sign here</h1>

    <form id="signature-form" method="POST" action="/sign-petition">

        {{#if error}}
        <div class="error">{{error}}</div>
        {{/if}}

        <canvas id="signature" width="500" height="200"></canvas>
        <input type="hidden" name="signature_code">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div id="home-buttons">
            <button id="clear-signature" type="button">Clear</button>
            <button id="sign-petition" type="submit">Sign my petition</button>
        </div>
    </form>


<script src="/jquery.js"></script>
<script src="signature-canvas.js" type="text/javascript"></script>